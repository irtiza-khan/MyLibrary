<h2>
    Book Title:
    <%= book.title %>
</h2>

<img width="150px" height="150px" src="<%= book.coverImagePath  %> " alt="">


<div class="author-data">
    <h2>Author:
        <%= book.author.name %>
    </h2>

    <h3>Publish Date:
        <%= book.publishDate.toDateString() %>
    </h3>
    <h3>Page Count:
        <%= book.pageCount %>
    </h3>
    <div>Description:
        <%= book.description %>
    </div>

</div>


<button><a href="/books/<%= book.id %>/edit ">Edit</a></button>
<button><a href="/authors/<%= book.author.id %> ">View Author</a></button>
<form action="/books/<%= book.id %>?_method=DELETE " method="POST">
    <button type="submit">Delete</button>
</form>